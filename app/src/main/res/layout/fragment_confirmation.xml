<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.view.ConfirmationFragment">

    <include
        android:id="@+id/confirmationTemplateTopBarSingle"
        layout="@layout/template_toplogo"/>

    <ImageView
        android:id="@+id/confirmationIvSending"
        android:layout_width="@dimen/common_width_image_paperplane"
        android:layout_height="@dimen/common_heigth_image_paperplane"
        android:layout_marginTop="@dimen/common_size_extra_large"
        android:contentDescription="@null"
        android:src="@drawable/senddata"
        app:layout_constraintEnd_toEndOf="@+id/confirmationTemplateTopBarSingle"
        app:layout_constraintStart_toStartOf="@+id/confirmationTemplateTopBarSingle"
        app:layout_constraintTop_toBottomOf="@+id/confirmationTemplateTopBarSingle" />

    <TextView
        android:id="@+id/confirmationTvNotice"
        style="@style/contentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_size_middle"
        android:layout_marginTop="@dimen/common_size_middle"
        android:text="@string/confirmation"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/confirmationIvSending"
        app:layout_constraintStart_toStartOf="@+id/confirmationIvSending"
        app:layout_constraintTop_toBottomOf="@+id/confirmationIvSending" />

    <TextView
        android:id="@+id/confirmationTvThanks"
        style="@style/contentTextPurple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_extra_large"
        android:text="@string/thanks"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/confirmationTvNotice"
        app:layout_constraintStart_toStartOf="@+id/confirmationTvNotice"
        app:layout_constraintTop_toBottomOf="@+id/confirmationTvNotice" />

    <Button
        android:id="@+id/confirmationBtnBackToMain"
        style="@style/fillButtonBlue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_middle"
        android:text="@string/go_back_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/confirmationTvNotice"
        app:layout_constraintStart_toStartOf="@+id/confirmationTvNotice"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>