<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.login.view.LoginFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/loginTemplateTopBarSingle"
                layout="@layout/template_toplogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/LoginBtnBackToMain"
                style="@style/backTextButtonIconGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_min"
                android:text="@string/go_back_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginTemplateTopBarSingle"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/loginTilMail"
                style="@style/outlinedTextFieldBlue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_extra_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginTvLoginInstructions">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginTietMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mail"
                    android:inputType="textEmailAddress"
                    tools:ignore="TextContrastCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/loginTilPassword"
                style="@style/outlinedTextFieldBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_default"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="@+id/loginTilMail"
                app:layout_constraintStart_toStartOf="@+id/loginTilMail"
                app:layout_constraintTop_toBottomOf="@+id/loginTilMail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/loginTietPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    tools:ignore="TextContrastCheck" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/loginTvLoginInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_default"
                android:text="@string/instructions_login"
                android:textAppearance="@style/contentText"
                app:layout_constraintEnd_toEndOf="@+id/LoginBtnBackToMain"
                app:layout_constraintStart_toStartOf="@+id/LoginBtnBackToMain"
                app:layout_constraintTop_toBottomOf="@+id/LoginBtnBackToMain" />

            <TextView
                android:id="@+id/loginTvInstructionsHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_max"
                android:text="@string/need_help"
                android:textAppearance="@style/contentTextVariant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginTilPassword" />

            <TextView
                android:id="@+id/loginTvBankodemiaMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_size_extra_large"
                android:text="@string/bankodemia_mail"
                android:textAppearance="@style/contentTextVariantPurple"
                app:layout_constraintBottom_toTopOf="@id/loginBtnLogin"
                app:layout_constraintEnd_toEndOf="@+id/loginTvInstructionsHelp"
                app:layout_constraintStart_toStartOf="@+id/loginTvInstructionsHelp"
                app:layout_constraintTop_toBottomOf="@+id/loginTvInstructionsHelp" />

            <Button
                android:id="@+id/loginBtnLogin"
                style="@style/disabledButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_extra_large"
                android:layout_marginBottom="@dimen/common_size_min"
                android:text="@string/login"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/loginTilPassword"
                app:layout_constraintStart_toStartOf="@+id/loginTilPassword"
                tools:ignore="TextContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>