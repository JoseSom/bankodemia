<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.view.IdentityFragment">

    <include
        android:id="@+id/identityTemplateTopLogoSingle"
        layout="@layout/template_toplogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/identityBtnBackToTelephone"
        style="@style/backTextButtonIconGray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_size_middle"
        android:layout_marginTop="@dimen/common_size_min"
        android:text="@string/identity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/identityTemplateTopLogoSingle"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/identityTvIdentityInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_min"
        android:text="@string/identityInstructions"
        android:textAppearance="@style/contentTextVariantGray"
        app:layout_constraintEnd_toEndOf="@+id/identityTvIdentityInstructionsTitle"
        app:layout_constraintStart_toStartOf="@+id/identityTvIdentityInstructionsTitle"
        app:layout_constraintTop_toBottomOf="@+id/identityTvIdentityInstructionsTitle" />

    <TextView
        android:id="@+id/identityTvIdentityInstructionsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_size_middle"
        android:layout_marginTop="@dimen/common_size_default"
        android:text="@string/identityInstructionsTitle"
        android:textAppearance="@style/contentText"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identityBtnBackToTelephone" />

    <Button
        android:id="@+id/identityBtnUnderstood"
        style="@style/fillButtonBlue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_size_middle"
        android:layout_marginBottom="@dimen/common_size_large"
        android:text="@string/understood"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>